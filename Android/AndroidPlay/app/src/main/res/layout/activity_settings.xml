<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.saygindogu.saygin.androidplay.SettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:layout_below="@+id/textView3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Travel Intensity:"
            android:id="@+id/travelIntensity"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Wheather Condition:"
            android:id="@+id/wheaterCondition"
            android:layout_marginTop="34dp"
            android:layout_below="@+id/sleepy"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exhausting"
            android:id="@+id/exhausting"
            android:checked="false"
            android:textColor="#e83232"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/travelIntensity"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mild Tiring"
            android:id="@+id/mildTiring"
            android:checked="false"
            android:textColor="#e99227"
            android:layout_alignTop="@+id/exhausting"
            android:layout_centerHorizontal="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peaceful"
            android:id="@+id/peaceful"
            android:checked="false"
            android:textColor="#598d16"
            android:layout_alignTop="@+id/mildTiring"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton"
            android:layout_marginTop="19dp"
            android:checked="false"
            android:layout_below="@+id/wheaterCondition"
            android:layout_alignRight="@+id/exhausting"
            android:layout_alignEnd="@+id/exhausting"
            android:layout_marginRight="29dp"
            android:layout_marginEnd="29dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton2"
            android:checked="false"
            android:layout_alignTop="@+id/radioButton"
            android:layout_centerHorizontal="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton3"
            android:checked="false"
            android:layout_above="@+id/snowy"
            android:layout_alignLeft="@+id/peaceful"
            android:layout_alignStart="@+id/peaceful"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/sunny"
            android:background="@drawable/sunny2"
            android:layout_below="@+id/radioButton"
            android:layout_alignRight="@+id/radioButton"
            android:layout_alignEnd="@+id/radioButton" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/rainy"
            android:background="@drawable/rainy"
            android:layout_alignTop="@+id/sunny"
            android:layout_alignRight="@+id/wheaterCondition"
            android:layout_alignEnd="@+id/wheaterCondition" />


        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/snowy"
            android:background="@drawable/snowy"
            android:layout_alignTop="@+id/rainy"
            android:layout_alignLeft="@+id/radioButton3"
            android:layout_alignStart="@+id/radioButton3" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/sleepy"
            android:background="@drawable/sleepy"
            android:layout_below="@+id/exhausting"
            android:layout_alignRight="@+id/exhausting"
            android:layout_alignEnd="@+id/exhausting" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageView2"
            android:background="@drawable/mild"
            android:layout_alignBottom="@+id/sleepy"
            android:layout_toRightOf="@+id/travelIntensity"
            android:layout_toEndOf="@+id/travelIntensity" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageView3"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageView4"
            android:background="@drawable/peaceful"
            android:layout_alignTop="@+id/imageView3"
            android:layout_alignLeft="@+id/radioButton3"
            android:layout_alignStart="@+id/radioButton3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Today You Want Travel Between :"
            android:id="@+id/textView3"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/sunny"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</RelativeLayout>
